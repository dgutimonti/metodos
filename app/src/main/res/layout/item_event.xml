<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewEvento"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic"
            android:contentDescription="Imagen del evento"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewTituloEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                tools:text="Título del Evento Muy Largo para Probar"/>

            <TextView
                android:id="@+id/textViewFechaEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_event"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp"
                tools:text="Sábado, 28 de Junio, 2025"/>

            <TextView
                android:id="@+id/textViewUbicacionEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_location_on"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                tools:text="Plaza 25 de Mayo, Sucre"/>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
